@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable
@{
    ViewData["Title"] = "Employee Data Entry";
}

@{

        <form method="post" name="Display">
            <div class="card">
                <div class="card-header">
                    @Html.ActionLink("Add New Record", "Insert_record")                    
                </div>
                <!-- /.card-header -->
                <div class="card-body">

                    <table id="example1" class="table table-bordered table-striped">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    <td>@dr["Id"].ToString()  </td>
                                    <td>@dr["FirstName"].ToString()  </td>
                                    <td>@dr["MiddleName"].ToString()  </td>
                                    <td>@dr["LastName"].ToString()  </td>
                                    <td  style="text-align:center">@Html.ActionLink("Edit ", "Edit", new { Id = dr["Id"].ToString() })</td>
                                    <td  style="text-align:center">@Html.ActionLink("Delete", "Delete", new { Id = dr["Id"].ToString() })</td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
</form>
}